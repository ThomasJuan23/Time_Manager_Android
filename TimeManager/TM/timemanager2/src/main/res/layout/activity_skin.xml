<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skinMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context=".skin">
    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/skinID"
            android:layout_width="wrap_content"
            android:layout_height="17sp"
            android:textColor="@color/white"
            android:layout_marginLeft="5sp"
            android:gravity="top"
            android:textSize="12sp"
            android:layout_marginStart="5sp"
            />
        <TextView
            android:id="@+id/skinScores"
            android:layout_width="wrap_content"
            android:layout_height="17sp"
            android:gravity="top"
            android:textSize="12sp"
            android:layout_marginLeft="10sp"
            android:textColor="@color/white"
            android:layout_marginStart="10sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/sBack"
            android:layout_width="wrap_content"
            android:layout_height="17sp"
            android:background="@drawable/buttonshape2"
            android:layout_alignParentRight="true"
            android:paddingRight="5sp"
            android:textSize="12sp"
            android:text="@string/back"
            android:textColor="@color/white"
            tools:ignore="RelativeOverlap,RtlSymmetry"
            android:paddingEnd="5sp"
            android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bridgeLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/bridgeImage"
            android:layout_width="97.5sp"
            android:layout_height="150sp"
            android:background="@mipmap/bridge"
            tools:ignore="DuplicateIds" />
        <Button
            android:id="@+id/bridgeText"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bridge"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape2"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_centerVertical="true"
             android:layout_toLeftOf="@+id/bridgeLine"
             android:layout_toStartOf="@+id/bridgeLine"
        android:layout_marginRight="20sp"
        tools:ignore="RelativeOverlap"
        android:layout_marginEnd="20sp">
        <Button
            android:id="@+id/waterImage"
            android:layout_width="97.5sp"
            android:layout_height="150sp"
            android:background="@mipmap/water"
             />
        <Button
            android:id="@+id/waterText"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape2"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bridgeLine"
        android:layout_toEndOf="@+id/bridgeLine"
        android:layout_marginLeft="20sp"
        tools:ignore="RelativeOverlap"
        android:layout_marginStart="20sp">
        <Button
            android:id="@+id/blueImage"
            android:layout_width="97.5sp"
            android:layout_height="150sp"
            android:background="@mipmap/bg2"
            />
        <Button
            android:id="@+id/blueText"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blue"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape2"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>

